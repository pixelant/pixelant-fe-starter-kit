<div class="big-icon-text-btn {{class}}">
    {{#if this.bigTopIcon}}
        <span class="big-icon-text-btn__icon icons icon-{{bigTopIcon}}"></span>
    {{/if}}
    {{#if this.header}}
        <h3 class="big-icon-text-btn__header">{{header}}</h3>
    {{/if}}
    {{#if this.text}}
        <p class="big-icon-text-btn__p">{{text}}</p>
    {{/if}}
    {{#if this.buttonName}}
        <a class="big-icon-text-btn__link btn btn-default" title="{{buttonName}}" href="{{#if this.buttonLink}}{{buttonLink}}{{else}}#{{/if}}">{{buttonName}}</a>
    {{/if}}
</div>
